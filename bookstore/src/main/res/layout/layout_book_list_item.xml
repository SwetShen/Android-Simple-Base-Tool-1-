<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_list_item_container"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    android:elevation="10dp"
    android:translationZ="10dp"
    android:background="#fff">

    <ImageView
        android:id="@+id/book_list_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/ic_default"
        android:layout_gravity="center"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/book_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/app_default"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/book_list_item_author"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="10sp"
            android:text="@string/app_default"/>

        <TextView
            android:id="@+id/book_list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/app_default"
            android:layout_gravity="right"/>

    </LinearLayout>




</LinearLayout>